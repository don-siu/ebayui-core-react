{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2017",
            "dom.iterable"
        ],
        "allowJs": false,
        "checkJs": false,
        "jsx": "react",
        "rootDir": "./src",
        "outDir": "./lib",
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true  // TODO: remove this to get react-dom type checking
    },
    "exclude": [
        "lib",
        "node_modules",
        "src/**/__tests__"
    ],
    "include": [
        "src",
        "test"
    ]
}
